<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="white_text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="red_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="main_features_subtitle_style" parent="red_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="main_features_layout_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/small_gap</item>
        <item name="android:layout_marginRight">@dimen/small_gap</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:elevation">@dimen/small_gap</item>

    </style>

    <style name="main_features_image_style">
        <item name="android:padding">@dimen/small_gap</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/feature_image</item>
    </style>

    <style name="section_style">
        <item name="android:layout_marginTop">@dimen/regular_gap</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/regular_gap</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="section_header_style">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginBottom">@dimen/small_gap</item>
        <item name="android:padding">@dimen/small_gap</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
